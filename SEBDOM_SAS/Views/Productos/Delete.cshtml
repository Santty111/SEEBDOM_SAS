@model SEBDOM_SAS.Models.Producto
@{
    ViewData["Title"] = "Eliminar Producto";
}

<link rel="stylesheet" href="~/css/productos.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/delete.css" asp-append-version="true" />

<div class="delete-container">
    <div class="delete-card">
        <h3 class="delete-header">
            <i class="fas fa-exclamation-triangle me-2"></i>¿Está seguro de eliminar este producto?
        </h3>

        <div class="delete-dl">
            <dl class="row">
                <dt class="col-sm-3">
                    <i class="fas fa-tag me-2"></i>@Html.DisplayNameFor(model => model.NombreProducto)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.NombreProducto)
                </dd>

                <dt class="col-sm-3">
                    <i class="fas fa-boxes me-2"></i>@Html.DisplayNameFor(model => model.StockActual)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.StockActual) @(Model.UnidadMedida == UnidadMedida.Kilogramos ? "kg" : "lbs")
                </dd>

                <dt class="col-sm-3">
                    <i class="fas fa-balance-scale me-2"></i>@Html.DisplayNameFor(model => model.UnidadMedida)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.UnidadMedida)
                </dd>
            </dl>
        </div>

        <div class="delete-actions">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-delete">
                    <i class="fas fa-trash-alt me-2"></i>Eliminar
                </button>
                <a asp-action="Index" class="btn btn-cancel">
                    <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}