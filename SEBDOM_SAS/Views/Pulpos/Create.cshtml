@model SEBDOM_SAS.Models.RegistroPulpo

@{
    ViewData["Title"] = "Nuevo Registro de Pulpo";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="Fecha" class="control-label"></label>
        <input asp-for="Fecha" class="form-control" type="date" required />
    </div>

    <div class="form-group mb-3">
        <label class="control-label">Seleccione los códigos:</label>
        <div class="row">
            @foreach (var codigo in ViewBag.Codigos)
            {
                <div class="col-md-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox"
                               name="codigosSeleccionados" value="@codigo" id="@codigo">
                        <label class="form-check-label" for="@codigo">
                            @codigo
                        </label>
                    </div>
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Continuar</button>
</form>